<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TKWeekWidgetTheme" parent="AppTheme" />

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.4pt">
        <item name="android:textSize">4pt</item>
    </style>

    <style name="Text.6pt">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.8pt">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.10pt">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Calendar">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Calendar.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Calendar.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="WeekInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="WeekInfo.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

</resources>
